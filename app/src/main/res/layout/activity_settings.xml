<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f0ee"
    tools:context=".auth.SettingsActivity">

    <ImageView
        android:id="@+id/passwordEditButtonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/passwordSettingsEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/passwordSettingsEditText"
        app:srcCompat="@drawable/edit" />

    <ImageView
        android:id="@+id/nameEditButtonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/nameSettingsEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameSettingsEditText"
        app:srcCompat="@drawable/edit" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/backImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:srcCompat="@drawable/backbutton" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/sofiasans"
            android:text="Вернуться"
            android:textColor="#6E6E6E"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/backImageView"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Почта"
        android:textColor="#212121"
        app:layout_constraintBottom_toTopOf="@+id/emailSettingsEditText"
        app:layout_constraintStart_toStartOf="@+id/emailSettingsEditText" />

    <EditText
        android:id="@+id/nameSettingsEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/nameEditButtonImageView"
        app:layout_constraintStart_toStartOf="@+id/emailSettingsEditText"
        app:layout_constraintTop_toBottomOf="@+id/emailSettingsEditText" />

    <EditText
        android:id="@+id/emailSettingsEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/input"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/emailEditButtonImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backLayout" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Имя"
        android:textColor="#212121"
        app:layout_constraintBottom_toTopOf="@+id/nameSettingsEditText"
        app:layout_constraintStart_toStartOf="@+id/nameSettingsEditText" />

    <TextView
        android:id="@+id/passwordTextVIew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Новый пароль"
        android:textColor="#212121"
        app:layout_constraintBottom_toTopOf="@+id/passwordSettingsEditText"
        app:layout_constraintStart_toStartOf="@+id/passwordSettingsEditText" />

    <EditText
        android:id="@+id/passwordSettingsEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/input"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/passwordEditButtonImageView"
        app:layout_constraintStart_toStartOf="@+id/nameSettingsEditText"
        app:layout_constraintTop_toBottomOf="@+id/nameSettingsEditText" />

    <ImageView
        android:id="@+id/showPasswordButtonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/passwordSettingsEditText"
        app:layout_constraintEnd_toEndOf="@+id/passwordSettingsEditText"
        app:layout_constraintTop_toTopOf="@+id/passwordSettingsEditText"
        app:srcCompat="@drawable/eye" />

    <ImageView
        android:id="@+id/emailEditButtonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/emailSettingsEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/emailSettingsEditText"
        app:srcCompat="@drawable/edit" />

</androidx.constraintlayout.widget.ConstraintLayout>